# Task-Marshal NPM Configuration
# BuildWorks.AI - Dual registry configuration for npm and GitHub packages

# GitHub Package Registry Configuration
//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}
@buildworksai:registry=https://npm.pkg.github.com

# NPM Registry Configuration (default)
registry=https://registry.npmjs.org/

# Publishing Configuration
access=public

# Authentication
always-auth=true

# Package Lock Configuration
package-lock=true
package-lock-only=false

# Security Configuration
audit-level=moderate
fund=false

# Cache Configuration
cache-max=86400000
cache-min=3600000

# Logging Configuration
loglevel=warn
progress=true

# Network Configuration
fetch-retries=3
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Timeout Configuration
fetch-timeout=300000
fetch-timeout-min=10000

# SSL Configuration
strict-ssl=true
