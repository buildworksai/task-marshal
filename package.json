{
  "name": "buildworks-ai-task-marshal",
  "version": "1.0.2",
  "description": "BuildWorks.AI Task-Marshal MCP Tools: A production-ready MCP server providing intelligent task management, project orchestration, and team collaboration via stdio.",
  "main": "dist/server.js",
  "bin": {
    "task-marshal": "dist/server.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run lint && npm run test",
    "migrate:from-taskmaster": "tsx scripts/migrate-from-taskmaster.ts",
    "docker:build": "docker build -t buildworksai/task-marshal .",
    "docker:run": "docker run -p 3000:3000 buildworksai/task-marshal",
    "docker:dev": "docker-compose up -d",
    "publish:npm": "npm publish --registry=https://registry.npmjs.org --access public",
    "publish:github": "npm publish",
    "publish:both": "npm run publish:npm && npm run publish:github",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "mcp",
    "task-management",
    "project-management",
    "buildworks",
    "typescript",
    "cursor",
    "windsurf",
    "claude"
  ],
  "author": "BuildWorks.AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buildworksai/task-marshal.git"
  },
  "bugs": {
    "url": "https://github.com/buildworksai/task-marshal/issues"
  },
  "homepage": "https://github.com/buildworksai/task-marshal#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "openai": "^4.20.1",
    "node-fetch": "^3.3.2",
    "winston": "^3.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
